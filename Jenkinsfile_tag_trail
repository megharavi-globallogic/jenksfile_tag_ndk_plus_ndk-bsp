pipeline {
    agent any
       	stages {
                stage('get the latest tag number') {
			steps {
				script {
					withCredentials([sshUserPrivateKey(credentialsId: 'git-ndk', keyFileVariable: '', passphraseVariable: '', usernameVariable: '')]) 
					{
                                        sh '''
					set -x
					rm -rf *
					git clone git@github.com:BuddyTV/ndk.git
					cd ndk
					git describe --tag > tag
					env.tag < "(cat tag)"
					echo "{$env.tag}"
					'''
                                        }
                                }
                       }
		 }
	}
}
